<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context="com.grappetite.zoya.activities.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/login_profile_pic" />

        <com.erraticsolutions.framework.views.CustomEditText
            android:id="@+id/et_email"
            style="@style/EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <com.erraticsolutions.framework.views.CustomEditText
            android:id="@+id/et_password"
            style="@style/EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_password"
            android:hint="Password"
            android:inputType="textPassword" />

        <com.erraticsolutions.framework.views.CustomButton
            android:id="@+id/btn_login"
            style="@style/Button.Login.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/s_round_pink"
            android:drawableLeft="@drawable/ic_key"
            android:drawableStart="@drawable/ic_key"
            android:paddingEnd="35dp"
            android:paddingLeft="30dp"
            android:paddingRight="40dp"
            android:paddingStart="30dp"
            android:text="Login" />

        <com.erraticsolutions.framework.views.CustomTextView
            style="@style/TextView.Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Forgot Password?"
        android:id="@+id/tv_forgot_password"/>

        <com.erraticsolutions.framework.views.CustomTextView
            style="@style/TextView.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Sign in with" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.erraticsolutions.framework.views.CustomButton
                android:id="@+id/btn_fb"
                style="@style/Button.Login.Social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/s_round_blue_fb"
                android:drawableLeft="@drawable/ic_fb"
                android:drawableStart="@drawable/ic_fb"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:text="Facebook" />

            <com.erraticsolutions.framework.views.CustomButton
                android:id="@+id/btn_login_google"
                style="@style/Button.Login.Social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/s_round_red_google"
                android:drawableLeft="@drawable/ic_google"
                android:drawablePadding="0dp"
                android:drawableStart="@drawable/ic_google"
                android:text="Google Plus" />

        </LinearLayout>

        <com.erraticsolutions.framework.views.CustomTextView
            style="@style/TextView.Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="OR" />

        <com.erraticsolutions.framework.views.CustomButton
            android:id="@+id/btn_signup"
            style="@style/Button.Login.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/s_round_pink"
            android:drawableLeft="@drawable/ic_double_arrow"
            android:drawableStart="@drawable/ic_double_arrow"
            android:paddingEnd="30dp"
            android:paddingLeft="27dp"
            android:paddingRight="30dp"
            android:paddingStart="27dp"
            android:text="SignUp" />

    </LinearLayout>

</FrameLayout>
