<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_body_part_hotspot_container"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_body_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/temp_female_pelvis_back" />


        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/r_hv_hips"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/iv_body_part"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:main_body_part_name="Buttock"
            app:sub_body_part_name="Hip" />

        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/iv_body_part"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            app:main_body_part_name="Buttock"
            app:sub_body_part_name="Buttock" />

        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/iv_body_part"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            app:main_body_part_name="Buttock"
            app:sub_body_part_name="Buttock" />
    </RelativeLayout>

</FrameLayout>