<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_body_part_hotspot_container"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_body_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/temp_female_left_foot_front" />


        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/iv_body_part"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="42dp"
            app:main_body_part_name="Foot"
            app:sub_body_part_name="Foot" />

        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            app:main_body_part_name="Foot"
            app:sub_body_part_name="Ankle" />

        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="70dp"
            app:main_body_part_name="Foot"
            app:sub_body_part_name="Ankle" />

        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/iv_body_part"
            android:layout_centerHorizontal="true"
            app:main_body_part_name="Foot"
            app:sub_body_part_name="Toes" />

    </RelativeLayout>

</FrameLayout>