<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingStart="20dp"
    android:paddingRight="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/s_round_5_stroke_1_gray_transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_pic_placeholder"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <com.erraticsolutions.framework.views.CustomTextView
                    style="@style/TextView"
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tehmeena"
                    android:textColor="@color/blue_txt_dark"
                    android:textSize="16sp"
                    app:cfont="@string/font_semiBold" />

                <com.erraticsolutions.framework.views.CustomTextView
                    style="@style/TextView"
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dlt_news_feed_profile_txt"
                    android:textColor="@color/gray_txt_dark"
                    android:textSize="12sp"
                    app:cfont="@string/font_regular" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:layout_gravity="end"
            android:src="@drawable/ic_flag_active"/>
    </FrameLayout>
</FrameLayout>