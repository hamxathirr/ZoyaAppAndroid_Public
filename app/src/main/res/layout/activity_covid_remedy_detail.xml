<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grappetite.zoya.covid.CovidRemediesDetailActivity">

    <include layout="@layout/include_toolbar_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/tv_title"
                style="@style/TextView.BlueDarkSymptomsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLOOD PRESSURE"
                android:textAllCaps="true" />

            <LinearLayout
                android:id="@+id/ll_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/rm1"
                style="@style/TextView.SymptomsTitle.Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:text="Rm1"
                android:textSize="13sp" />

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/rm2"
                style="@style/TextView.SymptomsTitle.Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:text="Rm1"
                android:textSize="13sp" />

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/rm3"
                style="@style/TextView.SymptomsTitle.Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:text="Rm1"
                android:textSize="13sp" />

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/rm4"
                style="@style/TextView.SymptomsTitle.Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:text="Rm1"
                android:textSize="13sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
