<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.erraticsolutions.framework.views.CustomTextView
        app:cfont="@string/font_semiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="end"
        android:textColor="@color/green_txt"
        android:textSize="13sp"
        android:text="3 Online"
        android:visibility="gone"
        android:id="@+id/tv_header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/s_round_10_solid_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_pic_placeholder"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maria Shah"
                    android:textColor="@color/blue_txt_dark"
                    android:textSize="16sp"
                    app:cfont="@string/font_regular" />

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_specialization"
                    app:cfont="@string/font_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:textColor="@color/gray_txt"
                    android:textSize="14sp"
                    android:text="'Specilization'"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_online"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="end|top"
            android:src="@drawable/s_circle_green_online"/>
    </FrameLayout>
</LinearLayout>