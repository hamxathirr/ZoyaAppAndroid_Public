<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grappetite.zoya.activities.ContactActivity">

    <include layout="@layout/include_toolbar_blue"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingRight="30dp"
            android:paddingEnd="30dp"
            android:orientation="vertical">

            <com.erraticsolutions.framework.views.CustomEditText
                android:id="@+id/et_subject"
                style="@style/EditText.Login.SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SUBJECT"
                android:inputType="textEmailSubject" />

            <com.erraticsolutions.framework.views.CustomEditText
                android:id="@+id/et_email"
                style="@style/EditText.Login.SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:hint="DESCRIPTION"
                android:inputType="textCapSentences|textMultiLine"
                android:minHeight="230dp" />

            <com.erraticsolutions.framework.views.CustomButton
                android:id="@+id/btn_send"
                style="@style/Button.PingBG"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:minHeight="35dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="SEND"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
