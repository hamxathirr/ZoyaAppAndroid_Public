<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_body_part_hotspot_container"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_body_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/temp_female_legs_back" />


        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/r_hv_thigh_left"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:main_body_part_name="Legs (back)"
            app:sub_body_part_name="Hamstring" />

        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/r_hv_thigh_right"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:main_body_part_name="Legs (back)"
            app:sub_body_part_name="Hamstring" />

       <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="50dp"
            android:layout_height="95dp"
           android:layout_alignBottom="@+id/iv_body_part"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            app:main_body_part_name="Legs (back)"
            app:sub_body_part_name="Calf" />

       <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="50dp"
            android:layout_height="95dp"
           android:layout_alignBottom="@+id/iv_body_part"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:main_body_part_name="Legs (back)"
            app:sub_body_part_name="Calf" />

        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/r_hv_thigh_right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:main_body_part_name="Legs (back)"
            app:sub_body_part_name="Back of Knee" />

        <com.grappetite.zoya.views.HotspotView
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/r_hv_thigh_right"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:main_body_part_name="Legs (back)"
            app:sub_body_part_name="Back of Knee"/>

    </RelativeLayout>

</FrameLayout>