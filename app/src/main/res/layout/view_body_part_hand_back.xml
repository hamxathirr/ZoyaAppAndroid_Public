<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_body_part_hotspot_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_body_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/temp_male_left_hand_back" />

        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/iv_hand"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/iv_body_part"
            android:layout_alignParentTop="true"
            app:main_body_part_name="Hand (Back)"
            app:sub_body_part_name="Full hand" />

    </RelativeLayout>

</FrameLayout>