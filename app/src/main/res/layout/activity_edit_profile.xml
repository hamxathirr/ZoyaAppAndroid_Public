<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.grappetite.zoya.activities.SignupActivity">

    <include layout="@layout/include_toolbar_blue"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="30dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_pic_placeholder"/>

                <com.erraticsolutions.framework.views.CustomTextView
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/s_round_pink"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="6dp"
                    android:text="Update Pic"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </FrameLayout>


            <com.erraticsolutions.framework.views.CustomEditText
                android:id="@+id/et_name"
                style="@style/EditText.Login.SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="NAME"
                android:inputType="textCapWords" />

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/tv_email"
                style="@style/EditText.Login.SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EMAIL"
                android:inputType="textEmailAddress" />

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/tv_age"
                style="@style/EditText.Login.SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="AGE"
                android:visibility="gone"
                android:inputType="number" />


            <com.erraticsolutions.framework.views.CustomTextView
                style="@style/TextView.SignUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/s_round_stroke_blue_transparent_thin"
                    android:drawableLeft="@drawable/ic_female_inactive"
                    android:drawableStart="@drawable/ic_female_inactive"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Female"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    app:cfont="@string/font_semiBold" />

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/s_round_blue"
                    android:drawableLeft="@drawable/ic_male_active"
                    android:drawableStart="@drawable/ic_male_active"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Male"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    app:cfont="@string/font_semiBold" />
            </LinearLayout>

            <com.erraticsolutions.framework.views.CustomTextView
                style="@style/TextView.SignUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textAllCaps="true" />

            <com.erraticsolutions.framework.views.CustomTextView
                android:id="@+id/tv_dob"
                style="@style/EditText.Login.SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:drawableEnd="@drawable/v_carrot_down_blue_24"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/v_carrot_down_blue_24"
                android:drawableStart="@drawable/ic_calendar"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="DD / MM / YY"
                android:textSize="13sp" />

            <com.erraticsolutions.framework.views.CustomTextView
                style="@style/TextView.SignUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maritial status"
                android:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/s_round_stroke_blue_transparent_thin"
                    android:padding="10dp"
                    android:text="Single"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    app:cfont="@string/font_semiBold" />

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_married"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/s_round_blue"
                    android:padding="10dp"
                    android:text="Married"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    app:cfont="@string/font_semiBold" />
            </LinearLayout>

            <com.erraticsolutions.framework.views.CustomButton
                android:id="@+id/btn_update"
                style="@style/Button.Login.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/s_round_pink"
                android:paddingEnd="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingStart="30dp"
                android:text="Update" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
