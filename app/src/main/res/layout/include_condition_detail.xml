<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.erraticsolutions.framework.views.CustomTextView
        android:id="@+id/tv_title"
        style="@style/TextView.BlueDarkSymptomsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="PHLEBITIS SYMPTOMS"/>

    <com.erraticsolutions.framework.views.CustomTextView
        app:font="@string/font_regular"
        android:id="@+id/tv_desc"
        android:layout_marginBottom="30dp"
        style="@style/TextView.SymptomsTitle.Gray"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/dlt_news_feed_profile_txt"/>

</LinearLayout>