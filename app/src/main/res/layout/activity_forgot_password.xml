<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grappetite.zoya.activities.ForgotPasswordActivity">

    <include layout="@layout/include_toolbar_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <com.erraticsolutions.framework.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="@color/blue"
            android:textSize="18sp"
            app:cfont="@string/font_bold" />

        <com.erraticsolutions.framework.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Enter your email and we will send\nyou a new password."
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:cfont="@string/font_semiBold" />

        <com.erraticsolutions.framework.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="You can reset it later."
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:cfont="@string/font_semiBold" />
        <com.erraticsolutions.framework.views.CustomEditText
            style="@style/EditText.Login.ForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/s_email_blue"
            android:drawableStart="@drawable/s_email_blue"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:hint="EMAIL"
            android:id="@+id/et_email"/>

        <com.erraticsolutions.framework.views.CustomButton
            android:id="@+id/btn_reset_password"
            style="@style/Button.Login.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/s_round_pink"
            android:paddingEnd="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingStart="30dp"
            android:text="Done"/>

    </LinearLayout>


</RelativeLayout>
