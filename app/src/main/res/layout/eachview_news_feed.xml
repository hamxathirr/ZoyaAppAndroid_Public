<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="275dp">

        <VideoView
            android:id="@+id/vv_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            tools:src="@drawable/dlt_news_feed_malala" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/fl_bottom"
        android:background="@color/blue_a80">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_title"
                    app:cfont="@string/font_semiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:text="The truth behind fairness creams"/>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:id="@+id/iv_news_feed_type"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    tools:src="@drawable/play"/>
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:flexWrap="wrap"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_like_count"
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_like_white_10"
                    android:drawableStart="@drawable/ic_like_white_10"
                    android:drawablePadding="3dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="18"/>

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_comment_count"
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_comment_white_10"
                    android:drawableStart="@drawable/ic_comment_white_10"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="3dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="18"/>

                <com.erraticsolutions.framework.views.CustomTextView
                    android:id="@+id/tv_share_count"
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_share_white_10"
                    android:drawableStart="@drawable/ic_share_white_10"
                    android:layout_marginLeft="15dp"
                    android:drawablePadding="3dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="18"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>

