<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grappetite.zoya.activities.ChangePasswordActivity">

    <include layout="@layout/include_toolbar_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">
        <com.erraticsolutions.framework.views.CustomEditText
            android:id="@+id/et_old_password"
            style="@style/EditText.Login.SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Old Password"
            android:inputType="textPassword"/>
        <com.erraticsolutions.framework.views.CustomEditText
            android:id="@+id/et_new_password"
            style="@style/EditText.Login.SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="New Password"
            android:inputType="textPassword"/>
        <com.erraticsolutions.framework.views.CustomEditText
            android:id="@+id/et_confirm_password"
            style="@style/EditText.Login.SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"/>

        <com.erraticsolutions.framework.views.CustomButton
            android:id="@+id/btn_change_password"
            style="@style/Button.PingBG"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Change Password"/>
    </LinearLayout>


</LinearLayout>
