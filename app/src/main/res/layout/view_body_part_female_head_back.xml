<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_body_part_hotspot_container"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_body_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@drawable/temp_female_head_back" />

        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/iv_scalp"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:main_body_part_name="Head (Back)"
            app:sub_body_part_name="Scalp" />

        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/iv_right_ear"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_scalp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="34dp"
            app:main_body_part_name="Head (Back)"
            app:sub_body_part_name="Ears" />


        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/iv_left_ear"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_scalp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="34dp"
            app:main_body_part_name="Head (Back)"
            app:sub_body_part_name="Ears" />


        <com.grappetite.zoya.views.HotspotView
            android:id="@+id/iv_nose"
            style="@style/SymptomsStep2HotSpot"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/iv_body_part"
            android:layout_centerHorizontal="true"
            app:main_body_part_name="Head (Back)"
            app:sub_body_part_name="Neck (back)" />

    </RelativeLayout>

</FrameLayout>